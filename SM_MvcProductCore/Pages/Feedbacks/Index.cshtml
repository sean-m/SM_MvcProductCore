@page
@model SM_MvcProductCore.Pages.Feedbacks.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Feedback.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback.First().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback.First().EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback.First().Comments)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Feedback) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
        </tr>
}
    </tbody>
</table>
